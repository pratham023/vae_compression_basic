#Convolution Neural Network (CNN)
import torch
import torch.nn as nn
import torch.optim as optim
import torch.nn.functional as F
from torch.utils.data import DataLoader
from torchvision.datasets import MNIST
from torchvision import transforms

import time

transform = transforms.Compose([
    transforms.ToTensor(),
    transforms.Normalize((0.5,), (0.5,))
])

train_data = MNIST('./data', train=True, transform=transform, download=True)
test_data = MNIST('./data', train=False, transform=transform, download=True)

train_loader = DataLoader(train_data, batch_size=128, shuffle=True)
test_loader = DataLoader(test_data, batch_size=128, shuffle=False)

class CNN(nn.Module):
    def __init__(self):
        super().__init__()
        self.conv1 = nn.Conv2d(1, 32, kernel_size=3)
        self.conv2 = nn.Conv2d(32, 64, kernel_size=3)
        self.fc1 = nn.Linear(64*5*5, 200)
        self.fc2 = nn.Linear(200, 100)
        self.fc3 = nn.Linear(100, 60)
        self.fc4 = nn.Linear(60, 30)
        self.fc5 = nn.Linear(30, 10)

    def forward(self, x):
        x = F.relu(self.conv1(x))
        x = F.max_pool2d(x, 2)

        x = F.relu(self.conv2(x))
        x = F.max_pool2d(x, 2)

        x = x.view(x.size(0), -1)

        x = F.relu(self.fc1(x))
        x = F.relu(self.fc2(x))
        x = F.relu(self.fc3(x))
        x = F.relu(self.fc4(x))
        x = self.fc5(x)
        return x

cnn_model = CNN()
criterion = nn.CrossEntropyLoss()
optimizer = optim.Adam(cnn_model.parameters(), lr=0.001)

for epoch in range(25):
    cnn_model.train()
    total_loss = 0

    for data, target in train_loader:
        optimizer.zero_grad()
        output = cnn_model(data)
        loss = criterion(output, target)
        loss.backward()
        optimizer.step()
        total_loss += loss.item()

    print(f"Epoch {epoch+1}, Loss: {total_loss/len(train_loader):.4f}")

cnn_model.eval()
correct = 0
total = 0

with torch.no_grad():
    for data, target in test_loader:
        output = cnn_model(data)
        _, predicted = torch.max(output, 1)
        total += target.size(0)
        correct += (predicted == target).sum().item()

print(f"Accuracy: {100 * correct / total:.2f}%")

all_params = torch.cat([p.detach().view(-1) for p in cnn_model.parameters()])
print(all_params.shape)

#VAE
def flatten_weights(model):
    return torch.cat([p.detach().view(-1) for p in model.parameters()])

def unflatten_weights(model, flat_vector):
    with torch.no_grad():
        pointer = 0
        for p in model.parameters():
            numel = p.numel()
            p.copy_(flat_vector[pointer:pointer + numel].view_as(p))
            pointer += numel

cnn_w = flatten_weights(cnn_model)

N_SAMPLES = 100
NOISE_STD = 0.01

weight_dataset = []
for _ in range(N_SAMPLES):
    noise = torch.randn_like(cnn_w) * NOISE_STD
    weight_dataset.append(cnn_w + noise)

weight_dataset = torch.stack(weight_dataset)

input_dim = weight_dataset.shape[1]
latent_dim = 64

class VAE(nn.Module):
    def __init__(self, input_dim, latent_dim):
        super().__init__()
        self.encoder = nn.Sequential(
            nn.Linear(input_dim, 1024),
            nn.ReLU(),
            nn.Linear(1024, 512),
            nn.ReLU()
        )
        self.mu = nn.Linear(512, latent_dim)
        self.logvar = nn.Linear(512, latent_dim)

        self.decoder = nn.Sequential(
            nn.Linear(latent_dim, 512),
            nn.ReLU(),
            nn.Linear(512, 1024),
            nn.ReLU(),
            nn.Linear(1024, input_dim)
        )

    def reparametrize(self, mu, logvar):
        std = torch.exp(0.5 * logvar)
        eps = torch.randn_like(std)
        return mu + eps * std

    def forward(self, x):
        h = self.encoder(x)
        mu = self.mu(h)
        logvar = self.logvar(h)
        z = self.reparametrize(mu, logvar)
        recon = self.decoder(z)
        return recon, mu, logvar

def vae_loss(recon, x, mu, logvar):
    recon_loss = F.mse_loss(recon, x, reduction='sum')
    kl = -0.5 * torch.sum(1 + logvar - mu.pow(2) - logvar.exp())
    return recon_loss + kl

vae_cnn = VAE(input_dim, latent_dim)
optimizer = optim.Adam(vae_cnn.parameters(), lr=1e-3)

start_time=time.time()

for epoch in range(500):
    optimizer.zero_grad()
    recon, mu, logvar = vae_cnn(weight_dataset)
    loss = vae_loss(recon, weight_dataset, mu, logvar)
    loss.backward()
    optimizer.step()

    if epoch % 50 == 0:
        print(f"Epoch {epoch}, Loss: {loss.item():.2f}")

with torch.no_grad():
    h = vae_cnn.encoder(cnn_w.unsqueeze(0))
    mu = vae_cnn.mu(h)
    z = mu                       # deterministic latent code
    reconstructed_weights = vae_cnn.decoder(z).squeeze(0)

unflatten_weights(cnn_model, reconstructed_weights)

end_time=time.time()
training_time = end_time - start_time

cnn_model.eval()
correct = 0
total = 0

with torch.no_grad():
    for data, target in test_loader:
        output = cnn_model(data)
        _, predicted = torch.max(output, 1)
        total += target.size(0)
        correct += (predicted == target).sum().item()

print(f"CNN Accuracy after VAE reconstruction: {100 * correct / total:.2f}%")
print(f"Training time: {training_time:.2f} seconds")
